{
  "name": "@ecodrix/chatbot",
  "version": "1.0.5",
  "description": "ECODrIx Chatbot SDK - lightweight widget integration",
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c && cp src/index.d.ts dist/index.d.ts",
    "build:watch": "rollup -c -w && cp src/index.d.ts dist/index.d.ts",
    "start": "npx serve dist",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "chatbot",
    "widget",
    "sdk",
    "ecodrix",
    "javascript",
    "iframe"
  ],
  "author": "ECODrIx Team",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "rollup": "^2.79.2",
    "rollup-plugin-terser": "^7.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
